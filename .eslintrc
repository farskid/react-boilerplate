{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise",
        "import",
        "react"
    ],
    "rules": {
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "indentSwitchCase": 0,
        "keyword-spacing": [
            "error",
            {
                "overrides": {
                    "switch": {
                        "after": false
                    }
                }
            }
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ]
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    }
}